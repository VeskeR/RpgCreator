<Page x:Class="RpgCreator.Client.Views.Skill"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RpgCreator.Client.Views"
      mc:Ignorable="d"
      Title="Skill" Height="272.932" Width="694.737">

    <Grid Background="White" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="307*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="SkillGrid" AutoGenerateColumns="False" Grid.Row="0" Margin="0" Grid.ColumnSpan="3">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
                <DataGridTextColumn Header="Cost" Binding="{Binding Cost}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="New Skill" Margin="10" Height="Auto" Grid.Row="1" Grid.Column="0"/>
        <Button Content="Edit Skill" Margin="10" Grid.Row="1" Height="Auto" Grid.Column="1"/>
        <Button Content="Delete Skill" Margin="10" Grid.Row="1" Height="Auto" Grid.Column="2"/>
    </Grid>
</Page>
